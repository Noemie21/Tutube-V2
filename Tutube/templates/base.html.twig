<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
        <script defer src="https://use.fontawesome.com/releases/v5.14.0/js/all.js"></script>
        
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('default') }}">Home</a>
                <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}

                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('user_show', {id:app.user.id})}}">Profil</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('video_index') }}">Vid√©os</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('default') }}">Autre</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">LogOut</a>
                    </li>

                {% else %}

                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register') }}">Register</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">LogIn</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('default') }}">Autre</a>
                    </li>
                
                {% endif %}
                </ul>
                    <form class="d-flex">{{ render(controller('App\\Controller\\SearchController::searchBar', {max: 3})) }}</form>

                </div>
            </div>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
